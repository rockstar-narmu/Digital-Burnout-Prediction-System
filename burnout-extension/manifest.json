{
  "manifest_version": 3,
  "name": "Burnout Activity Tracker",
  "version": "1.0",
  "description": "Tracks browser activity for burnout prediction.",

  "permissions": ["tabs", "activeTab", "scripting"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Burnout Tracker"
  },

  "icons": {
    "128": "icon.png"
  }
}
